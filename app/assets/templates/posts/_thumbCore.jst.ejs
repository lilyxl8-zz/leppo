<section class="img-container">
  <img src="<%= post.escape('full_img') %>" alt="" />
  <section class="post-author">
    <a href="#/feeds/<%= post.escape('author').toLowerCase() %>">
      <%= post.escape('author') %>
    </a>
  </section>
</section>

<section class="counters group">
  <div class="likes-count">
    <i class="fa fa-heart-o"></i>
    <span class="likes-count-num"><%= post.escape('like_count') %></span>
  </div>
  <div class="comments-count">
    <span class="fa fa-comment-o"></span>
    <span class="comments-count-num"><%= post.escape('comment_count') %></span>
  </div>
</section>
