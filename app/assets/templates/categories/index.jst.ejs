<ul class="categories-list">
  <% categories.each(function (category) { %>
    <li class="category-item group">

      <h2 class="category-title">
        <a href="#/categories/<%= category.escape("title").toLowerCase() %>"><%= category.escape("title") %>
        </a>
      </h2>

      <ul class="category-posts">
        <% category.posts().slice(0,6).forEach(function (post) { %>

          <li class="post-item">
            <h3 class="country-name">
              <a href="#/countries/<%= post.escape('country').toLowerCase() %> ">
                <%= post.escape('country') %>
              </a>
            </h3>

            <%= JST["posts/_post"]({ post: post }) %>

          </li>

        <% }) %>
      </ul>
    </li>
  <% }) %>

</ul>

<p>
  <a href="#/countries">
    <h2>Countries</h2>
  </a>
</p>
<p>
  <a href="#/categories/new">Add Category</a><br>
  <a href="#/feeds/new">Add Feed</a>
</p>
