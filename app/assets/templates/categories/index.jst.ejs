<ul class="categories-list">
  <% categories.each(function (category) { %>
    <li class="category-item">

    <h2 class="category-title">
      <a href="#/categories/<%= category.escape("title").toLowerCase() %>"><%= category.escape("title") %>
      </a>
    </h2>

    <ul class="category-posts">
      <% category.posts().each(function (post) { %>
        <li class="post-item">
          <img src="<%= post.escape('thumb_img') %>" alt="" />
        </li>
      <% }) %>
    </ul>
    </li>
  <% }); %>

</ul>
<p>
  <a href="#/countries">
    <h2>Countries</h2>
  </a>
</p>
<p>
  <a href="#/categories/new">Add Category</a><br>
  <a href="#/feeds/new">Add Feed</a>
</p>
